# AgentBox Marketing â€” Environment Variables
# Copy to .env and fill in your values

# GCP
GCP_PROJECT=your-gcp-project-id
GCP_LOCATION=us-central1
LLM_MODEL=gemini-1.5-pro

# Redis (use redis://localhost:6379 for local dev)
REDIS_URL=redis://localhost:6379

# Kafka (Confluent Cloud)
KAFKA_BOOTSTRAP_SERVERS=pkc-xxxxx.us-central1.gcp.confluent.cloud:9092
KAFKA_API_KEY=your-confluent-api-key
KAFKA_API_SECRET=your-confluent-api-secret

# Email (SMTP2GO)
SMTP2GO_PASS=your-smtp2go-password

# CRM
HUBSPOT_API_KEY=your-hubspot-api-key

# LinkedIn
LINKEDIN_ACCESS_TOKEN=your-linkedin-token
LINKEDIN_ORG_ID=your-org-id

# Web search
BRAVE_API_KEY=your-brave-api-key

# Agent tuning
MAX_EVENTS_PER_RUN=10
POLL_TIMEOUT_SECONDS=30
